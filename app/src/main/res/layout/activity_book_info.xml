<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_grey"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_title"
        layout="@layout/layout_title" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="86dp"
        android:layout_marginTop="@dimen/DIMEN_24PX"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/llyt_item"
            android:layout_width="72dp"
            android:layout_height="86dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/DIMEN_24PX">

            <com.bang.bookshare.view.CircleImageView
                android:id="@+id/civ_head_afd"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_default"
                app:border_color="@color/main_blue"
                app:border_width="0.1dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/llyt_item"
            android:text="@string/book_name"
            android:textColor="@color/text_grey"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_user_name_dr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_book_name"
            android:layout_marginStart="14dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/llyt_item"
            android:text="@string/tv_book_host"
            android:textColor="@color/icon_text_grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_book_name"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/tv_user_name_dr"
            android:textColor="@color/icon_text_grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_profile_dr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_user_name"
            android:layout_marginStart="14dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/llyt_item"
            android:text="@string/tv_profile"
            android:textColor="@color/icon_text_grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_user_name"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/tv_profile_dr"
            android:text="@string/profile"
            android:textColor="@color/icon_text_grey"
            android:textSize="12sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlyt_author"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/DIMEN_100PX"
        android:layout_marginTop="@dimen/DIMEN_24PX"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_author_dri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/DIMEN_24PX"
            android:text="@string/author"
            android:textColor="@color/dimgrey"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/icon_text_grey"
            android:layout_marginStart="@dimen/DIMEN_24PX"
            android:layout_toEndOf="@id/tv_author_dri"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_right0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/DIMEN_36PX"
            android:src="@mipmap/ic_right" />
    </RelativeLayout>

    <TextView style="@style/TextView" />

    <RelativeLayout
        android:id="@+id/rlyt_is_borrowed"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/DIMEN_100PX"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_is_borrowed_dri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/DIMEN_24PX"
            android:text="@string/is_borrowed"
            android:textColor="@color/dimgrey"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_is_borrowed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/DIMEN_24PX"
            android:textColor="@color/icon_text_grey"
            android:layout_toEndOf="@id/tv_is_borrowed_dri"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_right11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/DIMEN_36PX"
            android:src="@mipmap/ic_right" />
    </RelativeLayout>

    <TextView style="@style/TextView" />

    <RelativeLayout
        android:id="@+id/rlyt_book_collections"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/DIMEN_100PX"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_book_collections_dri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/DIMEN_24PX"
            android:text="@string/book_collections"
            android:textColor="@color/dimgrey"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_book_collections"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/DIMEN_24PX"
            android:textColor="@color/icon_text_grey"
            android:layout_toEndOf="@id/tv_book_collections_dri"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_right13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/DIMEN_36PX"
            android:src="@mipmap/ic_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlyt_phone"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/DIMEN_100PX"
        android:layout_marginTop="@dimen/DIMEN_24PX"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_phone_dri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/DIMEN_24PX"
            android:text="@string/host_phone"
            android:textColor="@color/dimgrey"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/DIMEN_24PX"
            android:textColor="@color/icon_text_grey"
            android:layout_toEndOf="@id/tv_phone_dri"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/DIMEN_36PX"
            android:src="@mipmap/ic_right" />
    </RelativeLayout>


    <TextView style="@style/TextView" />

    <RelativeLayout
        android:id="@+id/rlyt_address"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/DIMEN_100PX"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_address_dri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/DIMEN_24PX"
            android:text="@string/host_address"
            android:textColor="@color/dimgrey"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/DIMEN_24PX"
            android:textColor="@color/icon_text_grey"
            android:layout_toEndOf="@id/tv_address_dri"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_right2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/DIMEN_36PX"
            android:src="@mipmap/ic_right" />
    </RelativeLayout>

    <TextView style="@style/TextView" />

    <Button
        android:id="@+id/btn_chat"
        style="@style/ButtonTheme"
        android:layout_marginTop="@dimen/DIMEN_40PX"
        android:text="@string/send_message" />

</LinearLayout>